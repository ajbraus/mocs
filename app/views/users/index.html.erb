<div class="row">
<div class="span11">
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">Uncofirmed Users(<%= @unconfirmed_users.count %>)</a></li>
      <li><a href="#tab2" data-toggle="tab">Confirmed Users(<%= @confirmed_users.count %>)</a></li>
      <li><a href="#tab3" data-toggle="tab">Rejected Users(<%= @rejected_users.count %>)</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="3%"></th>
              <th width="30%">Name</th>
              <th width="20%">Email</th>
              <th width="10%">Org</th>
              <th width="15%">Applied On</th>
              <th width="20%">Actions</th>
            </tr>
          </thead>
          <tbody class="table-bordered">
            <% @unconfirmed_users.each do |u| %>
              <tr>
                <td></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.organization.name %></td>
                <td><%= u.nice_created_at %></td>
                <td>
                  <%= link_to "Confirm", user_confirm_path(u), class:"btn btn-mini btn-success" %>
                  <%= link_to "Reject", user_reject_path(u), class:"btn btn-mini btn-warning", confirm: "Are you sure?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @unconfirmed_users, renderer: BootstrapPagination::Rails %>
      </div>
      <div class="tab-pane" id="tab2">
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="3%"></th>
              <th width="30%">Name</th>
              <th width="30%">Email</th>
              <th width="15%">Applied On</th>
              <th width="20%">Actions</th>
            </tr>
          </thead>
          <tbody class="table-bordered">
            <% @confirmed_users.each do |u| %>
              <tr>
                <td></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.nice_created_at %></td>
                <td>
                  <%= link_to "Reject", user_reject_path(u), class:"btn btn-mini btn-warning", confirm: "Are you sure?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @confirmed_users, renderer: BootstrapPagination::Rails %>
      </div>
      <div class="tab-pane" id="tab3">
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="3%"></th>
              <th width="30%">Name</th>
              <th width="30%">Email</th>
              <th width="15%">Applied On</th>
              <th width="20%">Actions</th>
            </tr>
          </thead>
          <tbody class="table-bordered">
            <% @rejected_users.each do |u| %>
              <tr>
                <td></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.nice_created_at %></td>
                <td>
                  <%= link_to "Confirm", user_confirm_path(u), class:"btn btn-mini btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @rejected_users, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
<h2>All Mocs</h2>
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#posts1" data-toggle="tab">Published Projects(<%= @published_posts.count %>)</a></li>
      <li><a href="#posts2" data-toggle="tab">Unpublished Projects(<%= @unpublished_posts.count %>)</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="posts1">
        <%= render partial: "posts/post", collection: @published_posts, as: :post %>      
        <%= will_paginate @published_posts, renderer: BootstrapPagination::Rails %>
      </div>
      <div class="tab-pane" id="posts2">
        <%= render partial: "posts/post", collection: @unpublished_posts, as: :post %>
        <%= will_paginate @unpublished_posts, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>
</div>