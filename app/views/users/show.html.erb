<div class="row">
  <div class="span9">
  <h3><%= @user.name %></h3>
  <em></em>
  reputation:
  <h4>About Me</h4>

    <div class="btn btn-primary">
      Contact 
    </div>

  </div>

  <div class="span4">
    <div class="well">
      <h4>Top Interests</h4>
      <%= render partial: "shared/tags", locals: { tags: @tags }  %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span4">
    <h4>MOCs Viewed</h4>
    <% @mocs.each do |m| %>
      <%= render partial: "shared/mini_moc", locals: { m: m }  %>
    <% end %>
  </div>
  <div class="span4">
    <h4>MOCs Following</h4>
    <% @mocs.each do |m| %>
      <%= render partial: "shared/mini_moc", locals: { m: m }  %>
    <% end %>
  </div>
  <div class="span4">
    <div class="well">
      <h4>Recent Activity</h4>
      <% @activities.each do |activity| %>
        <div class="activity">
        <%= link_to activity.owner.name, activity.owner if activity.owner %>
        <%= render_activity activity %>
        </div>
      <% end %>
    </div>
  </div>
</div>