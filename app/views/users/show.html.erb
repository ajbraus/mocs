<div class="row">
  <div class="span8">
    <h3><%= @user.name %> <span class="muted">+123</span></h3>
    <h4>About Me</h4>
    <h4>Interests</h4>
    <%= render partial: "shared/tags", locals: { tags: @tags }  %>
    <div class="btn btn-primary pull-right">
      Contact 
    </div>
    <div class="clear-both">
      <h4>Recent Activity</h4>
      <% @activities.each do |activity| %>
        <div class="activity">
        <%= link_to activity.owner.name, activity.owner if activity.owner %>
        <%= render_activity activity %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="span4">
    <div class="well dark">
      <p class="muted">Recommended Topics</p>
      <%= render partial: "shared/tags", locals: { tags: @trending_tags }  %>
    </div>

    <div class="well dark">
      <p class="muted">Recommended Projects</p>
      <% @recommended_mocs.each do |m| %>
        <%= render partial: "shared/mini_moc", locals: { m: m }  %>
      <% end %>
    </div>
  </div>
</div>