<div class="row">
  <div class="span6">
    <h3>Leaders</h3>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Physician Name</th>
          <th>Credits</th>
          <th>Mocs</th>
          <th></th>                                           
        </tr>
      </thead>   
      <tbody>
        <% @org.users.each do |u| %>
            <tr>
              <td><%= u.name %></td>
              <td><%= u.credits %></td>
              <td><%= u.committed_tos.count %></td>
              <td><a href="#">Message</a></td>
            </tr>
        <% end %>                           
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="span6">
      <h3>Needs Help</h3>
       <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Physician Name</th>
              <th>Credits</th>
              <th>Mocs</th>
              <th></th>                                           
            </tr>
        </thead>   
        <tbody>
          <% @org.users.each do |u| %>
              <tr>
                <td><%= u.name %></td>
                <td><%= u.credits %></td>
                <td><%= u.committed_tos.count %></td>
                <td><a href="#">Message</a></td>
              </tr>
          <% end %>                           
        </tbody>
      </table>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="span12">
    <h3>Current Commitments</h3>
    <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Physician Name</th>
            <th>Moc Title</th>
            <th>Registered</th>
            <th>Progress</th>                                           
          </tr>
      </thead>   
      <tbody>
        <% @org.users.each do |u| %>
          <% u.commitments.each do |c| %>
            <tr>
              <td><%= c.committed_user.name %></td>
              <td><%= c.commitment.title %></td>
              <td><%= c.nice_created_at_date %></td>
              <td>
                <div class="progress progress-striped">
                  <div class="bar bar-success" style="width: <%= c.percent_complete%>%;"></div>
                </div>
              </td>                                       
            </tr>
          <% end %>
        <% end %>                            
      </tbody>
    </table>
  </div>
</div>