<div class="row">
  <div class="span8">  
  <%= raw(youtube_embed(@post.video_url)) if @post.video_url.present? %>
    <div>
      <h3>
        <strong>
          <%= @post.title %>
          <% if user_signed_in? && current_user == @post.user %>
            <%= link_to 'Edit', edit_post_path(@post), style: "font-size:17px;" %>
          <% end %>
        </strong>
      </h3>
<!--  <p class="lead">
        by <a href="orgprofile.html">The American Madeup Association</a>
      </p> -->
      <span class="muted">Project Lead: <em><%= link_to "#{@post.user.name}", user_path(@post.user) %></em></span>
    </div>    
    <div>
      <i class="icon-star gold"></i> 78 Favorite</p>
      <div>
        <%= render partial: "shared/tags", locals: { tags: @post.tags }  %>
      </div>
    </div>       
    <div>
      <h3><strong>Summary</strong></h3>
      <p class="muted">
        <%= @post.desc %>
      </p>
    </div>
    <div>
      <p>
        <strong>Project Duration</strong>: 6 months
      </p>
      <p>
        <strong>Time Commitment</strong>: 3 hours / Week
      </p>
      <p>
        <strong>Views</strong>: <%= @post.impressions_count %>
      </p>
    </div>    
        <h3>Comments</h3>
        <%= render partial: 'comments/form' %>
    <ul class="media-list">
    <% @comments.each do |c| %>
      <% if c.id.present? %>
        <%= render partial: 'shared/comment', locals: { c: c } %>
      <% end %>
    <% end %>
    </ul>  
  </div>
    <div class="span4">
      <div class="min-well">
        <% if user_signed_in? %>
          <% if current_user == @post.user %>
            <table class="table table-striped table-condensed">
                <thead>
                  <tr>
                    <th>Physician Name</th>
                    <th>Registered</th>
                    <th>Progress</th>                                           
                  </tr>
              </thead>   
              <tbody>
                <% @post.commitments do |c| %>
                <tr>
                    <td><%= c.user.name %></td>
                    <td><%= c.nice_created_at_date %></td>
                    <td>
                      <div class="progress">
                        <div class="bar bar-success" style="width: <%= c.percent_complete%>%;"></div>
                      </div>
                    </td>                                       
                </tr>
                <% end %>                           
              </tbody>
            </table>
          <% else %>
            <% if current_user.committed_to?(@post) %>
            <div>
              <ul class="todos">
                <% if @commitment.progress >= 6 %>
                  <div class="progress progress-striped progress-gold">
                    <div class="bar" style="width: 100%;"><span class="progress-count">MOC Completed!</span></div>
                  </div>
                <% else %>
                <h5>Your Progress</h5>
                <div class="progress progress-success progress-striped">
                  <div class="bar" style="width: <%= @percent_complete %>%;"></div>
                  <span class="progress-count"><span id="progress"><%= @commitment.progress %></span> / 6</span>
                </div>
                <div class="muted">
                  complete by <%= @post.nice_ends_on %>
                </div>
                <h5>To Do's</h5>
                <li class="tracking-el">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                  <div id="1" class="btn disabled btn-block">
                    <i class="<%= @commitment.progress >= 1 ? 'icon-check' : 'icon-check-empty'%>"></i>
                    <span class="todo-text <%= @commitment.progress >= 1 ? 'strike-through' : ''%>">Review Information</span>
                  </div>
                  <% end %>
                </li>
                <li class="tracking-el">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                  <div id="2" class="btn disabled btn-block">
                    <i class="<%= @commitment.progress >= 2 ? 'icon-check' : 'icon-check-empty'%>"></i>
                    <span class="todo-text <%= @commitment.progress >= 2 ? 'strike-through' : ''%>">Collect Baseline Data</span>
                  </div>
                  <% end %>
                </li>
                <li class="tracking-el">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                  <div id="3" class="btn disabled btn-block">
                    <i class="<%= @commitment.progress >= 3 ? 'icon-check' : 'icon-check-empty'%>"></i>
                    <span class="todo-text <%= @commitment.progress >= 3 ? 'strike-through' : ''%>">Choose Intervention</span>
                  </div>
                  <% end %>
                </li>
                <li class="tracking-el">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                  <div id="4" class="btn disabled btn-block">
                    <i class="<%= @commitment.progress >= 4 ? 'icon-check' : 'icon-check-empty'%>"></i>
                    <span class="todo-text <%= @commitment.progress >= 4 ? 'strike-through' : ''%>">Plan, Do, Check, Act</span>
                  </div>
                  <% end %>
                </li>
                <li class="tracking-el">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                  <div id="5" class="btn disabled btn-block">
                    <i class="<%= @commitment.progress >= 5 ? 'icon-check' : 'icon-check-empty'%>"></i>
                    <span class="todo-text <%= @commitment.progress >= 5 ? 'strike-through' : ''%>">Collect Post Test Data</span>
                  </div>
                  <% end %>
                </li>
                <% unless @commitment.progress >= 6 %>
                <div class="text-right">
                  <%= link_to increment_progress_commitment_path(@commitment), method: :put, class:"no-hover" do %>
                    <div class="btn <%= @commitment.progress >= 5 ? 'btn-gold' : 'disabled'%>">Complete MOC</div>
                  <% end %>
                  <%= render 'commitments/reneg' %>
                </div>
                <% end %>
                <% end %>
              </ul>
            </div>
            <% else %>
            <div class="muted">
              <ul class="todos">
                <%= render 'commitments/commit' %>
                <h5>To Do's</h5>
                <li id="reviewInfo" class="tracking-el">
                  <div class="btn disabled btn-block disabled">
                    <i class="icon-check-empty"></i>
                    <span class="todo-text">Review Information</span>
                  </div>
                </li>
                <li id="baselineData" class="tracking-el">
                  <div class="btn disabled btn-block disabled">
                    <i class="icon-check-empty"></i>
                    <span class="todo-text">Collect Baseline Data</span>
                  </div>
                </li>
                <li id="chooseIntervention" class="tracking-el">
                  <div class="btn disabled btn-block disabled">
                    <i class="icon-check-empty"></i>
                    <span class="todo-text">Choose Intervention</span>
                  </div>
                </li>
                <li id="planDo" class="tracking-el">
                  <div class="btn disabled btn-block disabled">
                    <i class="icon-check-empty"></i>
                    <span class="todo-text">Plan, Do, Check, Act</span>
                  </div>
                </li>
                <li id="postTestData" class="tracking-el">
                  <div class="btn disabled btn-block disabled">
                    <i class="icon-check-empty"></i>
                    <span class="todo-text">Collect Post Test Data</span>
                  </div>
                </li>
              </ul>
            </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="min-well">
        <h5><i>Related projects</i></h5>
        <ul>
          <% @mocs.each do |m| %>
            <%= render partial: "shared/mini_moc", locals: { m: m }  %>
          <% end %>
        </ul>
      </div>
    </div>   
  </div>
</div>
