<div class="row">
  <div class="span8">  
  <%= raw(youtube_embed(@post.video_url)) %>
    <div>
      <h3>
        <strong>
          <%= @post.title %>
          <% if user_signed_in? && current_user == @post.user %>
            <%= link_to 'Edit', edit_post_path(@post), style: "font-size:17px;" %>
          <% end %>
        </strong>
      </h3>
<!--  <p class="lead">
        by <a href="orgprofile.html">The American Madeup Association</a>
      </p> -->
      <span class="muted">Project Lead: <em><%= link_to "#{@post.user.name}", user_path(@post.user) %></em></span>
    </div>    
    <div>
      <i class="icon-star gold"></i> 78 Favorite</p>
      <div>
        <%= render partial: "shared/tags", locals: { tags: @post.tags }  %>
      </div>
    </div>       
    <div>
      <h3><strong>Summary</strong></h3>
      <p class="muted">
        <%= @post.desc %>
      </p>
    </div>
    <div>
      <p>
        <strong>Project Duration</strong>: 6 months
      </p>
      <p>
        <strong>Time Commitment</strong>: 3 hours / Week
      </p>
      <p>
        <strong>Views</strong>: <%= @post.impressions_count %>
      </p>
    </div>    
        <h3>Comments</h3>
        <%= render partial: 'comments/form' %>
    <ul class="media-list">
    <% @comments.each do |c| %>
      <% if c.id.present? %>
        <%= render partial: 'shared/comment', locals: { c: c } %>
      <% end %>
    <% end %>
    </ul>  
  </div>
    <div class="span4">
      <div class="min-well">
        <% if user_signed_in? %>
          <% if current_user == @post.user %>
            <table class="table table-striped table-condensed">
                <thead>
                  <tr>
                    <th>Physician Name</th>
                    <th>Registered</th>
                    <th>Progress</th>                                           
                  </tr>
              </thead>   
              <tbody>
                <% @post.commitments do |c| %>
                <tr>
                    <td><%= c.user.name %></td>
                    <td><%= c.nice_created_at_date %></td>
                    <td>
                      <div class="progress">
                        <div class="bar bar-success" style="width: 60%;"></div>
                      </div>
                    </td>                                       
                </tr>
                <% end %>                           
              </tbody>
            </table>
          <% else %>
            <div class="<%= current_user.committed_to?(@post) ? '' : 'muted'%>">
              <ul class="todos">
                <%= render 'commitments/commit' %>
                <li>
                  <span class="check-circle"></span>
                  <span class="todo-text">Review Background Info</span>
                </li>
                <li>
                  <span class="check-circle"></span>
                  <span class="todo-text">Collect Baseline Data</span>
                </li>
                <li>
                  <span class="check-circle"></span>
                  <span class="todo-text">Choose Intervention</span>
                </li>
                <li>
                  <span class="check-circle"></span>
                  <span class="todo-text">Plan - Do - Check - Act</span>
                </li>
                <li>
                  <span class="check-circle"></span>
                  <span class="todo-text">Collect Post Test Data</span>
                </li>
                <div class="text-right">
                  <div class="btn disabled">Complete MOC</div>
                  <%= render 'commitments/reneg' %>
                </div>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="min-well">
        <h5><i>Related projects</i></h5>
        <ul>
          <% @mocs.each do |m| %>
            <%= render partial: "shared/mini_moc", locals: { m: m }  %>
          <% end %>
        </ul>
      </div>
    </div>   
  </div>
</div>
