<div class="container">
  <!-- Masthead
  ================================================== -->
  <header class="jumbotron subhead" id="overview">
    <% unless user_signed_in? %>
      <div class="row">   
        <div class="span5">
          <h1>Rise to the Top</h1>      
          <span class="muted">Come, Learn, Contribute</span>
          <p class="lead">MOCs for Docs makes it fun to find a project for Maintenance of Certification part IV!</p>
        </div>
        <div class="span3 well">
          <h4>Login</h4>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div>
              <%= f.label :email %>
              <%= f.email_field :email %>
            </div>
            <div>
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>
            <div><%= f.submit "Login", class:"btn btn-primary" %></div>
          <% end %>
        </div>
        <div class="span3 well">
          <h4>Sign Up</h4>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div>
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
            <div>
              <%= f.label :email %>
              <%= f.email_field :email %>
            </div>
            <div>
              <%= f.label :state %>
              <%= f.select :state, us_states, class:"state required" %><br>
            </div>
            <div>
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>
            <div><%= f.submit "Register", class:"btn btn-primary" %></div>
          <% end %>
        </div>
      </div>
    <div class="row">
      <div class="span7">
        <blockquote>
          <p>â€œSeeing modern health care from the other side, I can say that it is clearly not set up for the patient. It is frequently a poor arrangement for doctors as well..."</p>
          <small>Ross I. Donaldson, MD of<cite title="Source Title">The Lassa Ward</cite></small>
        </blockquote>
      </div>
      <div class="span4 pull-right">
        <blockquote class="pull-right">
          <p>"The life so short, the craft so long to learn."</p>
          <small><cite title="Source Title">Hippocrates</cite></small>
        </blockquote>
      </div>
    </div> 
     <hr> 
  </header>
<% end %>
<div class="row">
  <div class="span8">
    <div class="jumbotron well clearfix" id="topicMenu">
      <%= form_tag root_path, :method => :get, class:"form-search" do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class:"span6 search-query", placeholder:"Search Actions and #Tags" %>
          <%= button_tag "Search", name: nil, class:"btn" %>
        </div>
      <% end %>
      <div id="searchTags" class="pull-left">
      </div>
    </div>

  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#A" data-toggle="tab">Newest</a></li>
      <li><a href="#B" data-toggle="tab">Activity</a></li>
      <!-- <li><a href="#C" data-toggle="tab"># Followers</a></li> -->
      <% if user_signed_in? %>
        <li><a href="#D" data-toggle="tab"><%= current_user.state %></a></li>
      <% end %>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="A">
        <%= render partial: "posts/post", collection: @posts, as: :post %>
        <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
      </div>

      <div class="tab-pane" id="B">
        <%= render partial: "posts/post", collection: @posts_by_activity, as: :post %>
        <%= will_paginate @posts_by_activity, renderer: BootstrapPagination::Rails %>                
      </div>

<% if false %>
      <div class="tab-pane" id="C">
        <%= render "posts/post", collection: @posts_by_followers, as: :post %>
        <%= will_paginate @posts_by_followers, renderer: BootstrapPagination::Rails %>        
      </div>
<% end %>
      <div class="tab-pane" id="D">
        <% if user_signed_in? %>
          <%= render partial: "posts/post", collection: @posts_by_state, as: :post %>
          <%= will_paginate @posts_by_state, renderer: BootstrapPagination::Rails %>
        <% end %>
      </div>      
    </div>
  </div> <!-- /tabbable -->
</div><!-- /row -->

  <div class="span4">
    <div class="well dark">
      <p class="muted">Trending Tags</p>
      <%= render partial: "shared/tags", locals: { tags: @trending_tags }  %>
    </div>
      <div class="well dark">
        <p class="muted">Trending Projects</p>
        <ul>
          <% @trending_mocs.each do |tm| %>
            <%= render partial: "shared/mini_moc", locals: { m: tm }  %>
          <% end %>
        </ul>
      </div>
  </div>
</div>